{
  "name": "boilerplate-ts-server",
  "description": "A boilerplate for a ts server with eslint, inspect, husky and lint-staged preconfigured.",
  "keywords": [
    "boilerplate",
    "typescript",
    "eslint",
    "husky",
    "lint-staged"
  ],
  "version": "0.1.0",
  "author": "Xorifelse",
  "repository": {
    "type": "git",
    "url": "git@github.com:Xorifelse/boilerplate-ts-server.git"
  },
  "license": "MIT",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node .",
    "dev": "nodemon",
    "debug": "node --inspect=5858 -r ts-node/register .",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint '*/**/*.ts' --quiet",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.ts' --quiet --fix",
    "prisma:gen": "npx prisma2 generate",
    "prisma:migrate": "npx prisma2 migrate up --experimental",
    "prisma:migrate:down": "npx prisma2 migrate down --experimental"
  },
  "dependencies": {
    "@prisma/client": "2.0.0-preview024",
    "apollo-server": "^2.11.0",
    "bcrypt": "^4.0.1",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "jsonwebtoken": "^8.5.1",
    "prisma2": "2.0.0-preview024"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix"
    ]
  }
}
